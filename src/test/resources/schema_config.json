{
    "type": "object",
    "properties": {
        "l1b_product": {
            "type": "string",
            "description": "Path to L1B product folder"
        },
        "gipp_folder": {
            "type": "string",
            "description": "Path to GIPP folder"
        },
        "gipp_version_check": {
            "type": "boolean"
        },
        "dem": {
            "type": "string",
            "description": "Path to DEM folder"
        },
        "geoid": {
            "type": "string",
            "description": "Path to GEOID folder"
        },
        "iers": {
            "type": "string",
            "description": "Path to IERS file"
        },
        "pod": {
            "type": "string",
            "description": "Path to POD file/folder"
        },
        "operation": {
            "type": "string",
