              },
              "20m_bands": {
                  "type": "number",
                  "minimum": 1
              },
              "60m_bands": {
                  "type": "number",
                  "minimum": 1
              }
            }
        },
        "inverse_location_additional_info": {
          "type": "object",
          "properties": {
            "ul_x" : {
              "type": "number"
            },
            "ul_y" : {
              "type": "number"
            },
            "lr_x" : {
              "type": "number"
            },
            "lr_y" : {
              "type": "number"
            },
            "referential" : {
              "type": "string"
            },
            "output_folder" : {
              "type": "string"
            }
          },
          "required":["ul_x", "ul_y", "lr_x", "lr_y", "referential", "output_folder"]
        }
    },
    "required": ["l1b_product", "gipp_folder", "dem", "geoid", "operation", "steps", "inverse_location_additional_info"]
}